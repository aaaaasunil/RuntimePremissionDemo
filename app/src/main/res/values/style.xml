    <style name="ButtonXLargeOrangeStyle" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_43sdp</item>
        <item name="android:fontFamily">@font/futura_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:background">@drawable/bg_button_yellow_corner_5</item>
