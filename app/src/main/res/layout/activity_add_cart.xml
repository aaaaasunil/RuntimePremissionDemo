<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clTop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddCartActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvView"
        app:layout_constraintTop_toBottomOf="@+id/tvButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        tools:itemCount="5"
        tools:listitem="@layout/row_cart_item"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tvButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical|center_horizontal"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Button Click Button ClickButtonClickButtonClickButtonClickButtonClickButtonClickButtonClickButtonClickButtonClickButtonClickButton ClickButton ClickButton ClickButton Click"/>

</androidx.constraintlayout.widget.ConstraintLayout>